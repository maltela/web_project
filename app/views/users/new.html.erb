<h1>New user</h1>

<%= render 'form' %>

<%= form_for(:user, as: :user, url: { action: 'register' }) do |f| %>
    <div class="form-group"><%= f.text_field        :identity,             :placeholder => 'Identity',:autofocus => true   ,:class=>'form-control'  %> </div>
    <div class="form-group"><%= f.text_field        :salt_masterkey,            :placeholder => 'Salt'               ,:class=>'form-control'   %> </div>
    <div class="form-group"><%= f.text_field        :pubkey_user,             :placeholder => 'pub'              ,:class=>'form-control'   %> </div>
    <div class="form-group"><%= f.text_field       :privkey_user_enc,                 :placeholder => 'priv'         ,:class=>'form-control'   %> </div>
   <%= f.submit "Registrieren", :class=>'btn btn-primary block full-width m-b' %>
<%end%>
<%= link_to 'Back', users_path %>
